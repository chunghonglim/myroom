  <style type="text/css">
	*{
		margin:0;
		padding:0;
		}		/*清除所有元素边框*/
	#banner{
		height:482px;
		width:1350px;
		position:relative;
		overflow:hidden;
		}
	#banner .banner-list{
		height:100%;
		}		/*继承父级高度*/
	#banner .banner-img{
		display:block;
		position:absolute;
		left:-299px;
		z-index:-1;
		opacity:0;
		transition:1s;
		}
	#banner .banner-dot{	
		width:100%;		/*继承父级高度*/
		position:absolute;
		bottom:10px;
		text-align:center;
		
		}
	#banner .banner-dot span{
		width:10px;
		height:10px;
		display:inline-block;	
		border-radius:10px;
		border:1px solid rgb(185,186,186);
		cursor:pointer;
		margin:2px;
		}
	#banner .banner-click-left{
		position:absolute;
		top:211px;
		left:0;
		background-color:;
		width:32px;
		height:61px;
		line-height:61px;
		text-align:center;
		font-size:25px;
		font-weight:900;
		color:rgb(237,235,235);
		cursor:pointer;
	}
	#banner .banner-click-left:hover{
		background-color:rgb(113,114,114);
	}
	#banner .banner-click-right{
		position:absolute;
		top:211px;
		right:0;
		background-color:;
		width:32px;
		height:61px;
		line-height:61px;
		text-align:center;
		font-size:25px;
		font-weight:900;
		color:rgb(237,235,235);
		cursor:pointer;
	}
	#banner .banner-click-right:hover{
		background-color:rgb(113,114,114);
	}
	
  </style>
