 <body>
	<div id="banner">
		<div class="banner-list">
			<div class="banner-img">
				<img src="./img/1.jpg" alt="" height="482px" >
			</div>
			<div class="banner-img">
				<img src="./img/2.jpg" alt="" height="482px" >
			</div>
			<div class="banner-img">
				<img src="./img/3.jpg" alt="" height="482px" >
			</div>
			<div class="banner-img">
				<img src="./img/4.jpg" alt="" height="482px" >
			</div>
			<div class="banner-img">
				<img src="./img/5.jpg" alt="" height="482px" >
			</div>
			<div class="banner-img">
				<img src="./img/6.jpg" alt="" height="482px" >
			</div>
		</div>
		<div class="banner-dot">
			<span></span>
			<span></span>
			<span></span>
			<span></span>
			<span></span>
			<span></span>
		</div>
		<div class="banner-click-left">
			<span> < </span>
		</div>
		<div class="banner-click-right">
			<span> > </span>
		</div>
	</div>
	<script type="text/javascript">
			var ban=document.getElementById("banner");
			var banlist=ban.getElementsByClassName("banner-list")[0];
			var banimg=banlist.getElementsByClassName("banner-img");
			var bandot=ban.getElementsByClassName("banner-dot")[0];
			var banspan=bandot.getElementsByTagName("span");
			var banleft=ban.getElementsByClassName("banner-click-left")[0];
			var banright=ban.getElementsByClassName("banner-click-right")[0];
			var num;  //索引值
			var clearTime;
			var k;
			banimg[0].style.opacity=1;
			banspan[0].style.backgroundColor="rgb(0,195,245)";  //初始样式

			//给banspan绑定序列号
			for(var i=0;i<banspan.length;i++){
					banspan[i].index=i;
					num=banspan[i].index;
					num=0;  //初始化序列号值，如果不初始化num值为5
					//移动到下面小点触发自动轮播效果
					banspan[i].onmouseover=function(){
						clearInterval(k);  //清除开始时候的轮播
						clearInterval(clearTime);  //为避免多次触发事件重复计时，每次触发事件开始时候进行清除计时器
						num=this.index;  //获取序列号
						for(var j=0;j<banspan.length;j++){
							banspan[j].style.backgroundColor="";
							banimg[j].style.opacity=0;}  //每次触发事件时候清空样式
						this.style.backgroundColor="rgb(0,195,245)";
						banimg[num].style.opacity=1;  //赋予相应触发事件对应属性
						//初始化后开始轮播
						clearTime=setInterval(function(){  //轮播方法函数
							if(num<banspan.length){
								for(var j=0;j<banspan.length;j++){
									banspan[j].style.backgroundColor="";
									banimg[j].style.opacity=0;}  //每次轮播都清空样式
								banimg[num].style.opacity=1;
								banspan[num].style.backgroundColor="rgb(0,195,245)";//设置样式
								num++;
								}
							else{
									num=0;
								}
							},5000)  //5s轮播一次
					}
				}
			//加载后触发自动轮播
			k=setInterval(function(){    //轮播方法函数
					if(num<banspan.length){
						for(var j=0;j<banspan.length;j++){
							banspan[j].style.backgroundColor="";
							banimg[j].style.opacity=0;}//每次调用清空初始样式
						banimg[num].style.opacity=1;
						banspan[num].style.backgroundColor="rgb(0,195,245)";//设置样式
						console.log(num);
						++num;
						}
					else {
						num=0;
					}
			},5000)  //5s轮播一次
			//点击右箭头向右切换
			banright.onclick=function(){
				clearInterval(clearTime);  //清除onmouseover的自动轮播
				++num;
				if(num>5){num=0;}  //防止导致未定义函数出现，如banimg[6]
				if(num<banspan.length){
					for(var j=0;j<banspan.length;j++){
						banspan[j].style.backgroundColor="";
						banimg[j].style.opacity=0;}  //每次调用清空初始样式
					banimg[num].style.opacity=1;
					banspan[num].style.backgroundColor="rgb(0,195,245)";  //设置样式
					console.log(num);
					}
			}
		    //点击左箭头向左切换
			banleft.onclick=function(){
				--num;
				clearInterval(clearTime);
				if(num<0){num=5}//防止未定义函数出现，如banimg[-1]
				if(num>-1){
					for(var j=0;j<banspan.length;j++){
						banspan[j].style.backgroundColor="";
						banimg[j].style.opacity=0;}  //每次调用清空初始样式
					banimg[num].style.opacity=1;
					banspan[num].style.backgroundColor="rgb(0,195,245)";  //设置样式
					console.log(num);
					}
			}	
	</script>
 </body>
